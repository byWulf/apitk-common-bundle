{
    "commit-msg": {
        "enabled": true,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "php ./vendor/bin/php-cs-fixer fix --verbose --dry-run",
                "options": []
            },
            {
                "action": "php ./vendor/bin/phpstan analyse -l 1 -c phpstan.neon .",
                "options": []
            },
            {
                "action": "php ./vendor/bin/phpmd ./ text ruleset.xml --exclude vendor",
                "options": []
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "php ./vendor/bin/phpunit --verbose",
                "options": []
            }
        ]
    }
}
